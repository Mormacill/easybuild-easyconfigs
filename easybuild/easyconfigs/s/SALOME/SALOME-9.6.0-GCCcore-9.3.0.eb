easyblock = 'Tarball'

name = 'SALOME'
version = '9.6.0'

homepage = 'https://www.salome-platform.org'
description = """Salome is an open-source software that provides a generic Pre- and Post-Processing platform for numerical
 simulation. It is based on an open and flexible architecture made of reusable components."""

toolchain = {'name': 'GCCcore', 'version': '9.3.0'}

source_urls = ['https://files.salome-platform.org/Salome/Salome%(version)s/']
sources = [SOURCE_TAR_GZ]
checksums = ['09aec1d99d36d7d11cdf835efcf8b9ed0c60fe08e2d748b12a7f64551f9287d7']

dependencies = [
	('Python', '3.8.2'),
	('libGLU', '9.0.1'),
	('libglvnd', '1.2.0'),
]

osdependencies = [('hostname')]

modextrapaths = {'PATH': ''}

postinstallcmds = ["cd  %(installdir)s && mv salome salome_old && chmod -x salome_old && ln -s mesa_salome salome"]

sanity_check_paths = {
    'files': ["salome"],
    'dirs': ["BINARIES-CO7"],
}

moduleclass = 'cae'
